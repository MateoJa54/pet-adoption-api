{
  "name": "pet-adoption-monorepo",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start:backend": "node server.js",
    "start:frontend": "npm --prefix frontend start",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c green,blue \"npm run start:backend\" \"npm run start:frontend\"",

    "install:all": "npm install && npm --prefix frontend install",

    "test:backend": "jest --runInBand",
    "test:frontend": "npm --prefix frontend test",
    "test": "npm run test:backend && npm run test:frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "jest": "^30.2.0"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/frontend/"
    ]
  }
}
