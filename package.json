{
  "name": "pet-adoption-monorepo",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start:backend": "node server.js",
    "start:frontend": "npm --prefix frontend start",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c green,blue \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm install && npm --prefix frontend install",
    "test:backend": "jest --runInBand",
    "test:frontend": "cd frontend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "k6:auth": "k6 run k6-tests/auth-test.js",
    "k6:adopters": "k6 run k6-tests/adopters-test.js",
    "k6:pets": "k6 run k6-tests/pets-test.js",
    "k6:shelters": "k6 run k6-tests/shelters-test.js",
    "k6:requests": "k6 run k6-tests/adoption-requests-test.js",
    "k6:load": "k6 run k6-tests/full-load-test.js",
    "k6:stress": "k6 run k6-tests/stress-test.js",
    "k6:frontend-login": "k6 run k6-tests/frontend-login-test.js",
    "k6:frontend-navigation": "k6 run k6-tests/frontend-navigation-test.js",
    "k6:frontend-assets": "k6 run k6-tests/frontend-static-assets-test.js",
    "k6:frontend-all": "npm run k6:frontend-login && npm run k6:frontend-navigation && npm run k6:frontend-assets",
    "k6:all": "npm run k6:auth && npm run k6:adopters && npm run k6:pets && npm run k6:shelters && npm run k6:requests && npm run k6:frontend-all",
    "lint": "eslint",
    "build:frontend": "cd frontend && npm run build",
    "deploy:frontend": "npm run build:frontend && firebase deploy --only hosting",
    "docker:build": "docker build -t pet-adoption-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env pet-adoption-api",
    "deploy:backend": "gcloud run deploy pet-adoption-api --source . --platform managed --region us-central1 --allow-unauthenticated"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^10.0.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/frontend/"
    ]
  }
}
